    </div>
</div>

<!-- Carousel Script -->
<script>
    let currentIndex = 0;

    function moveCarousel(direction) {
        const carouselContent = document.querySelector('.AU-carousel-content');
        const totalItems = carouselContent.children.length;
        const itemWidth = carouselContent.children[0].offsetWidth;

        // Update the current index, looping back if needed
        currentIndex = (currentIndex + direction + totalItems) % totalItems;

        // Calculate the offset for the transform
        const offset = -currentIndex * itemWidth;
        carouselContent.style.transform = `translateX(${offset}px)`;

        // Update the indicators
        updateIndicators();
    }

    function moveToSlide(index) {
        const carouselContent = document.querySelector('.AU-carousel-content');
        const itemWidth = carouselContent.children[0].offsetWidth;

        // Set the current index to the clicked indicator
        currentIndex = index;

        // Calculate the offset for the transform
        const offset = -currentIndex * itemWidth;
        carouselContent.style.transform = `translateX(${offset}px)`;

        // Update the indicators
        updateIndicators();
    }

    function updateIndicators() {
        const indicators = document.querySelectorAll('.AU-indicator');

        // Remove the 'active' class from all indicators
        indicators.forEach(indicator => indicator.classList.remove('active'));

        // Add the 'active' class to the current indicator
        indicators[currentIndex].classList.add('active');
    }

    // Initialize indicators on page load
    document.addEventListener('DOMContentLoaded', () => {
        updateIndicators();
    });
</script>


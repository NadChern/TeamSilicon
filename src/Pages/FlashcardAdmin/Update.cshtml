@page "{id}"
@model ContosoCrafts.WebSite.Pages.FlashcardAdmin.UpdateModel
@{
    ViewData["Title"] = "Update Flashcard";
}

<!-- Styling -->
<style>
    body {
        background-color: #f0f8ff;
    }

    .form-container {
        margin-top: 20px;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    label {
        font-size: 16px;
        font-weight: bold;
        color: #1a1a2e;
        display: block;
        margin-bottom: 5px;
    }

    input[type="text"], textarea, select {
        width: 100%;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #d0e7f9;
        border-radius: 8px;
        margin-bottom: 20px;
        box-sizing: border-box;
    }

    textarea {
        resize: vertical;
        height: 100px;
    }

    .dropdown-spacing {
        width: 150px;
        padding: 10px;
        font-size: 16px;
        border: 1px solid #d0e7f9;
        border-radius: 8px;
        margin-bottom: 30px;
        box-sizing: border-box;
    }

    .button-container {
        display: flex;
        justify-content: center;
        gap: 12px;
    }
    
    .submit-btn {
        display: inline-block;
        padding: 8px 20px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        background-color: #4682b4;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
    }

        .submit-btn:hover {
            background-color: #1e90ff;
        }

    .close-btn {
        display: inline-block;
        padding: 8px 20px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        background-color: #6c757d;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
    }

        .close-btn:hover {
            background-color: #5a6268;
        }

</style>

<h1>Update Flashcard</h1>

<!-- Form Structure -->
<div class="form-container">
    <form method="post">

        <input type="hidden" name="Flashcard.Id" value="@Model.Flashcard.Id" />

       <!-- Category -->
        <div>
            <label for="CategoryId">Category</label>
            <select id="CategoryId" name="Flashcard.CategoryId">
                <option value="OOP" selected="@(Model.IsOOPSelected ? "selected" : null)">OOP</option>
                <option value="Python" selected="@(Model.IsPythonSelected ? "selected" : null)">Python</option>
                <option value="C#" selected="@(Model.IsCSharpSelected ? "selected" : null)">C#</option>
                <option value="C++" selected="@(Model.IsCPlusPlusSelected ? "selected" : null)">C++</option>
                <option value="Mobile" selected="@(Model.IsMobileSelected ? "selected" : null)">Mobile</option>
                <option value="DS" selected="@(Model.IsDSSelected ? "selected" : null)">DS</option>
            </select>
        </div>

        <!-- Question, cannot be empty -->
        <div>
            <label for="Question">Question</label>
            <small>Max 100 characters</small>
            <span asp-validation-for="Flashcard.Question" class="text-danger font-weight-bold"></span> <!-- Shows *Required if empty -->
            <input type="text" id="Question" name="Flashcard.Question" value="@Model.Flashcard.Question" maxlength="100" placeholder="Enter your question here" />
        </div>

        <!-- Answer, cannot be empty -->
        <div>
            <label for="Answer">Answer</label>
            <small>Max 250 characters</small>
            <span asp-validation-for="Flashcard.Answer" class="text-danger font-weight-bold"></span> <!-- Shows *Required if empty -->
            <textarea id="Answer" name="Flashcard.Answer" rows="3" style="resize: none;" maxlength="250" placeholder="Enter your answer here">@Model.Flashcard.Answer </textarea>
        </div>

        <!-- Difficulty Level Numeric Input-->
        <div>
            <label asp-for="Flashcard.DifficultyLevel">Difficulty Level</label>
            <small>Enter 1 for Easy, 2 for Medium, or 3 for Hard.</small>
            <span asp-validation-for="Flashcard.DifficultyLevel" class="text-danger font-weight-bold"></span>
            <input type="number" 
                   step="1" min="1" max="3"
                   asp-for="Flashcard.DifficultyLevel"
                   placeholder="Enter 1, 2, or 3"
                   class="form-control" 
                   value="" />
       </div>
                
          <!-- Additional Resources Url -->
        <div>
            <label asp-for="Flashcard.Url">Additional Resources (URL)</label>
            <span asp-validation-for="Flashcard.Url" class="text-danger font-weight-bold"></span>
            <input type="text" asp-for="Flashcard.Url" placeholder="Enter a helpful link, e.g., https://example.com" />
        </div>

        <!-- Open Count with Dropdown (Current count and Reset option) -->
        <div>
            <label for="OpenCount">Open Count</label>
            <select id="OpenCount" name="Flashcard.OpenCount">
                <option value="@Model.Flashcard.OpenCount" selected>@Model.Flashcard.OpenCount</option>
                <option value="0">Reset to 0</option>
            </select>
        </div>

        <div class="button-container"> 
        <!-- Close Button -->
        <a asp-page="/FlashcardAdmin/Index" asp-route-id="@Model.Flashcard.Id" class="close-btn">Close</a>

        <!-- Save Changes Button -->
        <input type="submit" value="Save" class="submit-btn" />
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
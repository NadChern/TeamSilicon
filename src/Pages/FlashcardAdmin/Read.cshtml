@page "{id}"
@model ContosoCrafts.WebSite.Pages.FlashcardAdmin.ReadModel

@{
    ViewData["Title"] = "Read Flashcard";
}

<!-- Styling -->
<style>
    body 
    {
        background-color: #f0f8ff;
        margin: 0;
        padding: 0;
        overflow: auto;
    }

    .form-container 
    {
        margin-top: 20px;
        width: 100%;
        margin-left: auto;
        margin-right: auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 30px;
    }

    label 
    {
        font-size: 16px;
        font-weight: bold;
        color: #1a1a2e;
        display: block;
        margin-bottom: 5px;
    }

    p 
    {
        font-size: 16px;
        color: #333;
        margin-bottom: 20px;
    }

    .update-btn 
    {
        display: inline-block;
        width: 150px; /* Fixed width to center the button */
        padding: 8px 20px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        background-color: #4682b4;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
        margin-left: 250px;
    }

    .delete-btn 
    {
        display: inline-block;
        width: 150px;
        padding: 8px 20px;
        font-size: 16px;
        font-weight: 600;
        color: white;
        background-color: #e74c3c;
        border-radius: 8px;
        border: none;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-align: center;
        margin-left: 250px;
    }

    .delete-btn:hover 
    {
        background-color: #c0392b; /* Darker red on hover */
    }

    .update-btn:hover 
    {
            background-color: #1e90ff;
        }

</style>

<div>
    <h2>Flashcard Details</h2>
    <h3>Question</h3>
    <p>@Model.Flashcard.Question</p>

    <h3>Answer</h3>
    <p>@Model.Flashcard.Answer</p>

    <h3>Category</h3>
    <p>@Model.Flashcard.CategoryId</p>

    <h3>Difficulty Level</h3>
    <p>@Model.Flashcard.DifficultyLevel</p>

    <a asp-page="/FlashcardAdmin/Update" asp-route-id="@Model.Flashcard.Id" class="btn update-btn">Update</a>
</div>

    <!-- Delete Button -->
    <a asp-page="" asp-route-id="@Model.Flashcard.Id" class="delete-btn">Delete</a>

    <!-- Update Button -->
    <a asp-page="/FlashcardAdmin/Update" asp-route-id="@Model.Flashcard.Id" class="update-btn">Update</a>
</div>

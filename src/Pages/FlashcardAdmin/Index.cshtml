@page
@model ContosoCrafts.WebSite.Pages.FlashcardAdmin.IndexModel
@{
    ViewData["Title"] = "FlashCard Index";
}

<!-- Styling Section -->
<style>
    body {
        background-color: #f0f8ff; /* Light blue background */
        margin: 0;
        padding: 0;
        overflow: auto;
    }

    .material-symbols-outlined {
        font-variation-settings: 'FILL' 0, 'wght' 400, 'GRAD' 0, 'opsz' 24
    }

    .stylebox {
        margin-top: 20px;
        max-width: 1000px;
        margin-left: auto;
        margin-right: auto;
        background: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        overflow: hidden;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

    thead {
        background-color: #b0e0e6; /* Powder blue header */
        text-align: left;
    }

    th, td {
        padding: 15px;
        border-bottom: 1px solid #d0e7f9; /* Light blue row separator */
    }

    th {
        font-size: 18px;
        color: #1a1a2e; /* Dark navy for headers */
    }

    td {
        font-size: 16px;
        color: #2f4f4f; /* Dark slate gray for text */
    }

    tr:hover {
        background-color: #cfe2f3; /* Pale blue on hover */
    }

    .read-btn {
        display: inline-block;
        padding: 8px 12px;
        color: white;
        background-color: #4682b4; /* Steel blue button */
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: background-color 0.3s ease;
    }

        .read-btn:hover {
            background-color: #1e90ff; /* Dodger blue on hover */
        }
</style>

<!-- HTML Content -->
<div class="stylebox">
    <table class="table">
        <thead>
            <tr>
                <th>Question List</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var card in Model.Flashcards)
            {
                <tr>
                    <td>@card.Question</td>
                    <td>
                        <a asp-page="/Read/Details" asp-route-id="@card.Id" class="read-btn">
                            Read
                        </a>
                        <a asp-page="" asp-route-id="@card.Id" class="read-btn">
                            Update
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
